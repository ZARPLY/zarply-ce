@startuml
!define RECTANGLE class
skinparam rectangle {
  BackgroundColor #FDF6E3
  BorderColor #657B83
}

start
:Splash Screen;
:Welcome Screen;
partition "Authentication" {
  :Login or Create Account?;
  if (Login?) then (yes)
    :Enter Credentials;
    if (Credentials Valid?) then (yes)
      :Dashboard;
      stop
    else (no)
      :Show Login Error;
      :Retry Login;
      back to :Enter Credentials;
    endif
  else (no)
    :Set Password;
    if (Password Valid?) then (yes)
      :Dashboard;
      stop
    else (no)
      :Show Password Error;
      :Retry Set Password;
      back to :Set Password;
    endif
  endif
}
:Logout;
stop
@enduml
